     <tr>
      <th class="th1">#</th>
      <th class="th2">Username</th>
      <th class="th3">Score</th>
     </tr>
    </thead>
  </table>
  <div id="submitArea">
  {{#if can_start}}
  <form id="startGame" method="POST" action="/game/{{game_id}}/start" >
    <button id="start_game" type="submit" style="width:auto;" class="btn btn-success">Start Game</button>
  </form>
  {{else}}
  <form id="playGame" method="GET" action="/room/{{game_id}}" >
    <button id="play_game" type="submit" style="width:auto;" class="btn btn-success">Refresh</button>
  </form>
  {{/if}}
